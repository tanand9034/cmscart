<%- include layouts/header.ejs %>

<div class="row products">
        <div class="row">
    <% products.forEach(function(p){ %>
        
            <div class="col-xs-12 col-md-4 p">
                
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                                <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                            </a>

                              </div>
                              <div class="flip-card-back">
                                <h1 class="card-title"><%= p.title %></h1>
                                <br>
                                <h2>Rs <%= parseFloat(p.price).toFixed(2) %></h2>
                                <br>
                                <h3><a class="btn btn-primary" role="button" href="/products/<%= p.category %>/<%= p.slug %>">Details</a></h3>
                              </div>
                            </div>
                        </div>
                <!-- <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a> -->
                <h3><%= p.title %></h3>
                <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a> 
            
        </div>
            
        <% }); %>
    </div>
</div>

<%- include layouts/footer.ejs %>